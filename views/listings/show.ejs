<% layout("/layouts/boilerplate")%>
<br/>
<br/>
<div class="row">
    <div class="col-8 offset-3 mt-3">
    <h3>Listing details</h3>
</div>
    <div class="card col-6 offset-3 ">
        
            <img class="card-img-top show-img " src="<%=listing.image%>" alt="listing image">
            <div class="card-body  ">
              <p class="card-text"><b><%=listing.title%>.</b><br>
                <%=listing.description%><br>
                &#8377;<%=listing.price.toLocaleString("en-IN")%><br>
                <%=listing.location%><br>
                <%=listing.country%>
            </p>
            </div>
          </div>
   
    </div>
    <div class="btns offset-3" >
        <a href="/listings/<%=listing._id%>/edit" class="col-1 btn btn-success mr-6" id="newbtn" >Edit </a>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-success offset-4">Delete </button>
    </form>

    </div>
   
    

</div> 